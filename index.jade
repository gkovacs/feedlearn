    script(src='index.js')
    #quizpage.mainpage(style='display: none')
      .bluebackground(style='background-color: white')
        //- #scorebox(style='position: absolute; right: 5px; border-radius: 10px; width: 50px; height: 50px; background-color: blue')
        //-  div(style='font-size: 12px') Score:
        //-  div 
        #questionmessage(style='font-size: 18px; text-align: center')
        #questionworddiv(style='font-size: 30px; text-align: center')
          span#questionword
          span#questionwordaudio.glyphicon.glyphicon-volume-up(style='cursor: pointer; margin-left: 10px; margin-top: -7px; vertical-align: middle; font-size: 30px')
        #answeroptions
        button.btn.btn-default(onclick='gotoChatPage()' style='font-size: 20px; margin-top: 15px; width: 50%')
          span.glyphicon.glyphicon-question-sign(style='margin-right: 7px; font-size: 18px')
          span Questions + Answers
        button.btn.btn-default(onclick='gotoOptionPage()' style='font-size: 20px; margin-top: 15px; width: 50%')
          span.glyphicon.glyphicon-wrench(style='margin-right: 7px; font-size: 18px')
